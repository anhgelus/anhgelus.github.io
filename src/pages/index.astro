</Layout>

<script defer>
  const projects = document.querySelectorAll("[data-project]");
  let scrollDisabled = false;
  let x = 0;
  let y = 0;
  window.addEventListener("popstate", (e) => {
    if (
      !window.location.href.endsWith("#") &&
      !window.location.href.endsWith("#")
    )
      return;
    projects.forEach((el) => {
      el.classList.remove("project--active");
      scrollDisabled = false;
    });
  });
  document.addEventListener("click", (e) => {
    projects.forEach((el) => {
      if (!el.classList.contains("project--active")) return;
      if (!(e.target instanceof HTMLElement)) return;
      const element = e.target;
      if (element.classList.contains("project--active")) {
        element.classList.remove("project--active");
        element.classList.add("project--deactivate");
        scrollDisabled = false;
        history.pushState({}, "", "#");
      }
    });
  });
  projects.forEach((el) => {
    el.addEventListener("click", (e) => {
      el.classList.add("project--active");
      el.classList.remove("project--deactivate");
      scrollDisabled = true;
      x = window.scrollX;
      y = window.scrollY;
      history.pushState({}, "", "#" + el.getAttribute("data-project"));
    });
  });
  document.addEventListener("scroll", (e) => {
    if (scrollDisabled) window.scrollTo(x, y);
  });
</script>
