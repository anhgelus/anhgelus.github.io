---
interface Props {
    title: string
    image: string
    white?: boolean
}

const {title, image, white = false} = Astro.props
---
<div class="project__item">
    <div class="project__container" data-project>
        <div class=`project__data` style=`background-image: url(${image});`>
            <div class="project__content">
                <div class="project__container__title">
                    <h2 class=`project__title big ${white ? "white" : ""}`>{title}</h2>
                </div>
                <div class="project__content__detail">
                    <slot />
                </div>
            </div>
        </div>
    </div>
</div>
